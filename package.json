{
    "author": "tknight-dev",
    "dependencies": {},
    "devDependencies": {
        "esbuild": "^0.25.5",
        "prettier": "^3.0.0",
        "rimraf": "^6.0.0",
        "typescript": "^5.0.0"
    },
    "description": "A better/faster way to start writing games",
    "exports": {
        ".": {
            "import": {
                "import": "./dist/index.mjs",
                "types": "./dist/main/index.d.ts"
            },
            "require": {
                "require": "./dist/index.cjs",
                "types": "./dist/main/index.d.ts"
            }
        },
        "./grid": {
            "import": {
                "import": "./dist/module-grid-index.mjs",
                "types": "./dist/modules/grid/index.d.ts"
            },
            "require": {
                "require": "./dist/module-grid-index.cjs",
                "types": "./dist/modules/grid/index.d.ts"
            }
        }
    },
    "files": [
        "dist"
    ],
    "homepage": "https://gaming-canvas.org",
    "keywords": [
        "audio",
        "canvas",
        "dpi",
        "fullscreen",
        "gamepad",
        "gaming",
        "grids",
        "inputs",
        "keyboard",
        "layers",
        "lightweight",
        "mobile",
        "mouse",
        "multithreading",
        "orientation",
        "resolution",
        "responsive",
        "splitscreen",
        "threads",
        "touch",
        "vibration",
        "visibility",
        "wakelock"
    ],
    "license": "MIT",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "name": "@tknight-dev/gaming-canvas",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tknight-dev/gaming-canvas.git"
    },
    "scripts": {
        "lint": "prettier esbuild.cjs esbuild.mjs src/. --write",
        "build": "rimraf dist && yarn build:cjs && yarn build:mjs && tsc",
        "build:cjs": "node esbuild.cjs",
        "build:mjs": "node esbuild.mjs",
        "dev": "tsc --noEmit --preserveWatchOutput --watch"
    },
    "type": "module",
    "types": "./dist/index.d.ts",
    "version": "1.15.4"
}
